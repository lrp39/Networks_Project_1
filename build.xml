<project>

   <property name="src.dir" location="src" />
  <property name="lib.dir"     value="lib"/>

   <target name="clean">
       <delete dir="build"/>
   </target>

   <target name= "jar" depends = "compile">
       <mkdir dir= "build/jar/"/>
       <mkdir dir= "doc"/>
       <jar destfile= "build/jar/simple_chat_application.jar" basedir="build/classes"/>
   </target>

   <path id = "application" location= "build/jar/simple_chat_application.jar"/>

   <target name="compile">
       <mkdir dir="build/classes"/>
       <javac srcdir="src" destdir="build/classes" />
       <copy todir="build/classes">
           <fileset dir="build/classes" excludes="**/*.java"/>
       </copy>
   </target>

   <target name="doc" depends="jar" >
      <javadoc sourcepath="src" destdir="doc"/>
 </target>

</project>
